<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.lesson.practice_part1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:onClick="previous"
            android:text="Pre" />
        <Button

            android:onClick="btn1"
            android:id="@+id/btn1"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:text="1"/>
        <Button
            android:onClick="btn2"
            android:id="@+id/btn2"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:text="2"/>
        <Button
            android:onClick="btn3"
            android:id="@+id/btn3"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:text="3"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:onClick="btn4"
            android:text="4" />
        <Button
            android:onClick="btn5"
            android:id="@+id/btn5"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:text="5"/>
        <Button
            android:onClick="next"
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_part1"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/img_part12"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/img_part1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp">

        <RadioButton
            android:id="@+id/radioOptionA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            tools:ignore="DuplicateIds"/>

        <RadioButton
            android:id="@+id/radioOptionB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            tools:ignore="DuplicateIds"/>

        <RadioButton
            android:id="@+id/radioOptionC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            tools:ignore="DuplicateIds" />

        <RadioButton
            android:id="@+id/radioOptionD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            tools:ignore="DuplicateIds" />

    </RadioGroup>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:thumb="@drawable/custome_thumb"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-5dp">


        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doStart"
            android:text="start"
            tools:ignore="OnClick"
            android:background="@color/colorGreen"/>
        <Button
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="submit"
            tools:ignore="OnClick" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView_currentPosion"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:layout_below="@+id/textView_maxTime"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView_maxTime"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>